<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.aplicacinftc">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.AnadirUserActivity"></activity>
        <activity android:name=".Activities.AnadirAsignaturaActivity" />
        <activity android:name=".Activities.AnadirGrupoActivity" />
        <activity android:name=".Activities.modificarActivity" />
        <activity
            android:name=".Activities.SplashActivity"
            android:screenOrientation="locked">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.LoginActivity"
            android:screenOrientation="locked" />
        <activity
            android:name=".Activities.MainActivity"
            android:screenOrientation="locked" />
        <activity
            android:name=".Activities.RegisterActivity"
            android:parentActivityName=".Activities.LoginActivity"
            android:screenOrientation="locked" />
        <activity
            android:name=".Activities.RecuperarActivity"
            android:parentActivityName=".Activities.LoginActivity"
            android:screenOrientation="locked">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.LoginActivity" />
        </activity>
    </application>

</manifest>