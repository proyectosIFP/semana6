<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.modificarFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="#72AEAEAE"
        android:orientation="vertical">

        <EditText
            android:id="@+id/cambiarNombreUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre"
            android:inputType="text" />

        <EditText
            android:id="@+id/cambiarApellidosUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Apellidos"
            android:inputType="text" />

        <EditText
            android:id="@+id/cambiarEdadUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Edad"
            android:maxLength="2"
            android:inputType="text"
            android:digits="12345678901234567890"/>

        <Button
            android:id="@+id/buttoncambiarFotoPerfil"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:text="CAMBIAR FOTO DE PERFIL"
            android:layout_marginTop="15dp"
            android:background="@color/colorAccent"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonCambairUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/colorAccent"
                android:text="APLICAR CAMBIOS"
                android:textColor="@android:color/white" />

        </LinearLayout>


    </LinearLayout>



</FrameLayout>